<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical">

<!-- message 1-->
<LinearLayout
    android:layout_width="@dimen/message_width"
    android:layout_height="wrap_content"
    android:background="@drawable/my_message_shape"
    android:layout_gravity="end"
    android:padding="@dimen/mediumMargin"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_1"
        android:textSize="@dimen/textSizeMedium"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="4dp"
        />
    <ImageView
        android:layout_width="@dimen/icon"
        android:layout_height="@dimen/icon"
        android:src="@drawable/double_check"
        android:layout_gravity="end"
        app:tint="@color/white" />
</LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/timeColor"
    android:text="@string/message1_time"
    android:textSize="@dimen/small_text_size"
    android:layout_gravity="end"
    android:layout_marginEnd="@dimen/marginSmall"
    />

    <!-- message 2-->
    <LinearLayout
        android:layout_width="@dimen/message_width"
        android:layout_height="wrap_content"
        android:background="@drawable/my_message_shape"
        android:layout_gravity="end"
        android:padding="@dimen/mediumMargin"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_2"
            android:layout_margin="@dimen/marginSmall"
            android:textSize="@dimen/textSizeMedium"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/double_check"
            android:layout_gravity="end"
            app:tint="@color/white"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/timeColor"
        android:text="@string/message1_time"
        android:textSize="@dimen/small_text_size"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/marginSmall"
        />

    <!-- message 3-->
    <LinearLayout
        android:layout_width="@dimen/message_width"
        android:layout_height="wrap_content"
        android:background="@drawable/his_message_shape"
        android:layout_gravity="start"
        android:padding="@dimen/mediumMargin"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/marginSmall"
android:text="@string/message_3"
            android:layout_margin="@dimen/marginSmall"
            android:textSize="@dimen/textSizeMedium"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/timeColor"
        android:text="@string/message1_time"
        android:textSize="@dimen/small_text_size"
        android:layout_gravity="start"
        android:layout_marginEnd="@dimen/marginSmall"
        />



    <!-- message 4-->
    <LinearLayout
        android:layout_width="@dimen/message_width"
        android:layout_height="wrap_content"
        android:background="@drawable/my_message_shape"
        android:layout_gravity="end"
        android:padding="@dimen/mediumMargin"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_1"
            android:paddingHorizontal="@dimen/marginSmall"
android:textSize="@dimen/textSizeMedium"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/double_check"
            app:tint="@color/white"
android:layout_gravity="end"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/timeColor"
        android:text="@string/message1_time"
        android:textSize="@dimen/small_text_size"
        android:layout_gravity="end"
        android:layout_marginHorizontal="@dimen/marginSmall"
        />

<View
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />


</LinearLayout>